<%= form_tag('/session', method: :post) do %>
  
    <%= label_tag(:username, "Your username:") %>
    <%= text_field_tag(:username, nil, class: "form-control")  %>

 
    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>

  
    <%= submit_tag("Sign In") %>

<% end %> 